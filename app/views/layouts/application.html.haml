!!!
%html{:lang => "en", "ng-app" => "TodoApp"}
  %head
    %title NgTodo
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{'data-private-token' => "#{@user.private_token rescue nil}", 'data-page' => "#{params[:controller]}:#{params[:action]}"}
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          = link_to :controller => 'todo', :action => 'index' do 
            %h1 NgTodo
        .navbar-collapse.collapse
          .navbar-form.navbar-right
            - if session[:user_id]
              = link_to('Log Out', {:controller => 'user', :action => 'logout'}, :class => 'btn btn-danger')
            - else
              = link_to('Log In', {:controller => 'user', :action => 'index'}, :class => 'btn btn-success')
    .container
      .buffer
        = yield
